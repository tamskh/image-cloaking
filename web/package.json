    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.14",
    "@tensorflow/tfjs": "^4.17.0",
